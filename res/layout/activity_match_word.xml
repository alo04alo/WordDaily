<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hako.matchword.MatchWordActivity" >

   	<RelativeLayout 
   	    android:id="@+id/matchword_title"
   	    android:layout_marginLeft="10dp"
   	    android:layout_marginTop="10dp"
   	    android:layout_marginRight="10dp"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content">
   	    <ImageView 
   	        android:id="@+id/matchword_ivheart1"
   	        style="@style/MatchWordHeartImage" />
   	    <ImageView    	        
   	        android:id="@+id/matchword_ivheart2"
   	        style="@style/MatchWordHeartImage"
   	        android:layout_toRightOf="@id/matchword_ivheart1"
   	        android:layout_marginLeft="5dp"/>
   	    <ImageView 
   	        android:id="@+id/matchword_ivheart3"
   	        style="@style/MatchWordHeartImage"
   	        android:layout_toRightOf="@id/matchword_ivheart2"
   	        android:layout_marginLeft="5dp" />
   	    
   	    <TextView android:id="@+id/matchword_tv_timer"
   	        android:text="@string/matchword_timer_default_text"
   	        android:layout_alignParentRight="true"
   	        android:textSize="25sp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"/>

	</RelativeLayout>
	
   	<LinearLayout 
   	    android:baselineAligned="false"
   	    android:layout_below="@id/matchword_title"
   	    android:orientation="horizontal"
   	    android:layout_marginBottom="10dp"
   	    android:paddingLeft="10dp"
   	    android:paddingRight="10dp"
  	    android:paddingTop="30dp"
   	    android:layout_width="match_parent"
   	    android:layout_height="match_parent">
		<ListView 
		    android:id="@+id/matchword_list_jpan"
		    style="@style/MatchWordListView" 
		    android:layout_marginRight="20dp" />
		<ListView
		    android:id="@+id/matchword_list_vie"
		    style="@style/MatchWordListView" /> 
   	</LinearLayout>

</RelativeLayout>

