<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/exam_1_test_screen"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
	    <RelativeLayout 
	        android:id="@+id/exam_1_top_view"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal">
	        
	        <TextView 
	            android:id="@+id/exam_1_timer"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"        
	           	android:layout_alignParentRight="true"
	           	android:text="03:00"
	           	android:textColor="#003200"
	           	android:textSize="18dp"
	           	android:textStyle="bold"
	           	android:layout_marginRight="10dp" />
	    </RelativeLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"   
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:layout_above="@+id/exam_1_below"     
	        android:layout_below="@+id/exam_1_top_view"
	        android:gravity="center">
		    <TextView 
		        android:id="@+id/exam_1_tvQuesion"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:textSize="28dp"
		        android:textColor="#1F497D"
		        android:textStyle="bold"
		        android:text="Cái ô"/>
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/exam_1_below"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_alignParentBottom="true"
		    android:paddingBottom="20dp">
			<RelativeLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
			    <Button 
			        android:id="@+id/exam_1_answer1"
			        style="@style/AnswerButton"
			        android:layout_alignParentLeft="true"
			        android:layout_marginLeft="10dp"
			        android:text="かばん"/>
			    <Button 
			        android:id="@+id/exam_1_answer2"
			        style="@style/AnswerButton"
			        android:layout_alignParentRight="true"
			        android:layout_marginRight="10dp"
			        android:text="やさい"/>
			</RelativeLayout>
			<RelativeLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="20dp">
			    <Button 
			        android:id="@+id/exam_1_answer3"
			        style="@style/AnswerButton"
			        android:layout_alignParentLeft="true"
			        android:layout_marginLeft="10dp"
			        android:text="くだもの"/>
			    <Button 
			        android:id="@+id/exam_1_answer4"
			        style="@style/AnswerButton"
			        android:layout_alignParentRight="true"
			        android:layout_marginRight="10dp"
			        android:text="カード"/>
			</RelativeLayout>
		</LinearLayout>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/exam_1_result_screen"
	    android:layout_width="match_parent"	    
	    android:layout_height="match_parent"
	    android:visibility="invisible">
		<LinearLayout 
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:orientation="vertical">
			    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffffffff"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:orientation="vertical">
			        <TextView 
			            android:id="@+id/exam_1_tv_message"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_alignParentTop="true"
			            android:textColor="#FF0000"
			            android:textSize="20sp"
			            android:gravity="center_horizontal"
			            android:text="Thím làm rất tốt!"/>
			        <TextView 
			            android:id="@+id/exam_1_tv_score"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_below="@+id/exam_1_tv_message"
			            android:textColor="#FF0000"
			            android:textSize="20sp"
			            android:gravity="center_horizontal"
			            android:text="5 / 20"/>
			        <RatingBar 
			            android:id="@+id/exam_1_rb_star"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerHorizontal="true"	            
			            android:layout_below="@+id/exam_1_tv_score"
			            android:clickable="false"
			            android:focusable="false"
			            android:isIndicator="true"
			            android:numStars="3"/>
			        <Button 
			            android:id="@+id/exam_1_bt_replay"
			            android:layout_height="wrap_content"
			            android:layout_width="wrap_content"
			            android:background="@drawable/btn_replay"
			            android:layout_alignParentRight="true"
			            android:paddingRight="10dp"
			            android:layout_marginRight="10dp"
			            android:layout_centerVertical="true"/>
			    </RelativeLayout>
			    <View 
			        android:background="@color/line_bottom_list_question" 
			        android:layout_width="fill_parent" 
			        android:layout_height="3.0dip" 
			        />
			    <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">
			        <ListView 
			            android:id="@+id/exam_1_lv_detail_result"			            		           
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"></ListView>
			    </LinearLayout>
		    </LinearLayout>
	</RelativeLayout>
</RelativeLayout>
